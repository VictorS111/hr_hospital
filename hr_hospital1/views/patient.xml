<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hospital_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <field name="ref" readonly="1"/>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="date_of_birth"/>
                        <field name="is_child"/>
                        <field name="age"/>
                        <field name="appointment_count"/>
                        <field name="appointment_id"/>
                    </group>
                    <group>
                        <field name="gender" invisible="context.get('hide_gender')"/>
                        <field name="active" invisible="1"/>
                        <field name="doctor_id"/>
                        <field name="capitalized_name"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_hospital_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <!--                <field name="doctor_id"/>-->
                <field name="capitalized_name"/>
            </tree>
        </field>
    </record>

    <record id="view_hospital_patient_search" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="['|', ('name','ilike', self), ('ref','ilike', self)]"/>
                <field name="age"/>
                <field name="gender"/>
                <filter name="filter_male" string="Male" domain="[('gender', '=', 'male')]"/>
                <filter name="filter_female" string="Female" domain="[('gender', '=', 'female')]"/>
                <separator/>
                <filter name="filter_childs" string="Childs" domain="[('is_child', '=', True)]"/>
                <separator/>
                <filter name="filter_archived" string="Archived" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Gender" name="group_by_gender" context="{'group_by': 'gender'}"/>
                </group>
                <searchpanel>
                    <field name="gender" icon="fa-users" select="multi" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter_male':1, 'search_default_group_by_gender':1,
            'search_default_filter_child':1}
        </field>
        <field name="search_view_id" ref="hr_hospital1.view_hospital_patient_search"/>
    </record>

    <menuitem
            id="menu_patient"
            name="Patients"
            parent="menu_patient_master"
            action="action_hospital_patient"
            sequence="0"/>

</odoo>